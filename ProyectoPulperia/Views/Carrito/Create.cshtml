@model ProyectoPulperia.Carrito

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center p-2">Por Favor agregue la cantidad a comprar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text-center justify-content-center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group text-center justify-content-center">
            @Html.LabelFor(model => model.IDPRODUCTO, "IDPRODUCTO", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-12">
                @Html.DropDownList("IDPRODUCTO", null, htmlAttributes: new { @class = "form-control", contenteditable = "false"})
                @Html.ValidationMessageFor(model => model.IDPRODUCTO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center justify-content-center">
            @Html.LabelFor(model => model.USERID, "Usuario:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-12">
                @Html.DropDownList("USERID", null, htmlAttributes: new { @class = "form-control", contenteditable = "false" })
                @Html.ValidationMessageFor(model => model.USERID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center justify-content-center">
            @Html.LabelFor(model => model.CANTIDADCARRITO, "Cantidad:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-12">
                @Html.EditorFor(model => model.CANTIDADCARRITO, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.CANTIDADCARRITO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center justify-content-center p-2">
            <div class="col-12">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
