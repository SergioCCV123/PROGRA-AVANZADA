@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav">
        <li class="nav-item p-2">
            @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li class="nav-item p-2"><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item p-2">
            <a href="@Url.Action("Register","Account")" class="btn btn-primary">Registrarse</a>
        <li class="nav-item p-2">
            <a href="@Url.Action("Login","Account")" class="btn btn-primary">Iniciar Sesion</a>
        </li>
    </ul>
}
