@model IEnumerable<ProyectoPulperia.Compra>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Historial de Compras</h2>
@if (User.IsInRole("admin")) { 
    <div class="text-center justify-content-center">
        <a href="@Url.Action("Create","Compra")" class="btn btn-successful">Crear Nuevo</a>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TOTALCOMPRA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FECHACOMPRA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TOTALCOMPRA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FECHACOMPRA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Compra", new { id = item.IDCOMPRA })"><i class="fas fa-edit"></i>|</a>
            <a href="@Url.Action("Delete", "Compra", new { id = item.IDCOMPRA})"><i class="fas fa-trash-alt"></i>|</a>
            <a href="@Url.Action("Details", "Compra", new { id = item.IDCOMPRA })"><i class="fas fa-info-circle"></i></a>
        </td>
    </tr>
}

</table>
